<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.renyu.nimlibrary.util.OtherUtils" />
        <variable
            name="recentContact"
            type="com.netease.nimlib.sdk.msg.model.RecentContact" />
        <variable
            name="eventImpl"
            type="com.renyu.nimlibrary.binding.EventImpl" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="83dip"
        android:onClick="@{(view) -> eventImpl.gotoConversationActivity(view, recentContact)}"
        android:onLongClick="@{(view) -> eventImpl.onLongClick(view, recentContact)}"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/layout_adapter_conversationlist"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_adapter_conversationlist"
                android:layout_width="51dip"
                android:layout_height="51dip"
                android:layout_marginStart="11dip"
                android:layout_marginEnd="12dip"
                android:layout_centerVertical="true"
                app:avatarImage="@{recentContact.getContactId()}"
                fresco:actualImageResource="@drawable/default_grey_avatar"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/default_grey_avatar"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:failureImage="@drawable/default_grey_avatar"
                fresco:failureImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/iv_adapter_conversationlist">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="22dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            app:chatName="@{recentContact.getContactId()}"
                            app:checkUserInfoExists="@{recentContact.getContactId()}"
                            android:textColor="#333333"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dip"
                            android:src="@mipmap/ic_role_crown"/>
                        <TextView
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dip"
                            android:textSize="12sp"
                            android:textColor="#9f7a25"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="11dip"
                        android:layout_marginStart="11dip"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:text="@{OtherUtils.getFriendlyTimeSpanByNow(recentContact.getTime())}"
                        android:textColor="#b1b1b1"/>
                </LinearLayout>
                <com.facebook.drawee.span.SimpleDraweeSpanTextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginEnd="11dip"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_alignParentBottom="true"
                    app:recentContact="@{recentContact}"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d9d9d9">

        </View>
    </LinearLayout>
</layout>