<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.renyu.nimlibrary.util.OtherUtils" />
        <variable
            name="imMessage"
            type="com.netease.nimlib.sdk.msg.model.IMMessage" />
        <variable
            name="eventImpl"
            type="com.renyu.nimlibrary.binding.EventImpl" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="10dip">
        <TextView
            android:id="@+id/aurora_tv_msgitem_date"
            style="@style/chat_text_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{OtherUtils.getFriendlyTimeSpanByNow2(imMessage.getTime())}"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/aurora_iv_msgitem_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dip"
                app:avatarImage="@{imMessage.getFromAccount()}"
                android:onClick="@{(view) -> eventImpl.gotoUserInfo(view, imMessage.getFromAccount())}"
                fresco:actualImageResource="@drawable/default_grey_avatar"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/default_grey_avatar"
                fresco:placeholderImageScaleType="focusCrop"
                fresco:failureImage="@drawable/default_grey_avatar"
                fresco:failureImageScaleType="focusCrop"
                fresco:roundAsCircle="true"/>
            <TextView
                android:id="@+id/aurora_tv_msgitem_display_name"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="13sp"
                android:layout_toEndOf="@id/aurora_iv_msgitem_avatar"
                android:visibility="gone"
                app:chatName="@{imMessage.getFromAccount()}" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dip"
                android:layout_below="@+id/aurora_tv_msgitem_display_name"
                android:layout_toEndOf="@id/aurora_iv_msgitem_avatar" >
                <RelativeLayout
                    android:layout_width="195dp"
                    android:layout_height="105dp"
                    android:onLongClick="@{(view) -> eventImpl.onLongClick(view, imMessage)}"
                    android:onClick="@{(view) -> eventImpl.gotoMapPreview(view, imMessage)}">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/nim_location_bk"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dip"
                        android:layout_alignParentBottom="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dip"
                        android:paddingEnd="3dip"
                        android:paddingStart="3dip"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        app:cvListLocationTitle="@{imMessage}" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>