<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.renyu.nimlibrary.util.OtherUtils" />
        <variable
            name="imMessage"
            type="com.netease.nimlib.sdk.msg.model.IMMessage" />
        <variable
            name="eventImpl"
            type="com.renyu.nimlibrary.binding.EventImpl" />
        <variable
            name="aVChatTypeEnum"
            type="com.renyu.nimavchatlibrary.params.AVChatTypeEnum" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dip">
        <include
            android:id="@+id/aurora_tv_msgitem_date"
            layout="@layout/view_msgitem_date"
            bind:imMessage="@{imMessage}" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/aurora_iv_msgitem_avatar"
                layout="@layout/view_msgitem_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="10dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                bind:eventImpl="@{eventImpl}"
                bind:imMessage="@{imMessage}" />
            <RelativeLayout
                android:id="@+id/bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dip"
                android:layout_toStartOf="@id/aurora_iv_msgitem_avatar">
                <LinearLayout
                    android:layout_width="250dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:onLongClick="@{(view) -> eventImpl.onLongClick(view, imMessage)}">
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:layout_width="123dip"
                        android:layout_height="115dip"
                        android:layout_gravity="end"
                        fresco:actualImageResource="@drawable/default_grey_avatar"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:placeholderImage="@drawable/default_grey_avatar"
                        fresco:placeholderImageScaleType="focusCrop"
                        fresco:failureImage="@drawable/default_grey_avatar"
                        fresco:failureImageScaleType="focusCrop"
                        fresco:roundedCornerRadius="15dp"
                        app:cvListVRImage="@{imMessage}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        app:cvListVRTitle="@{imMessage}"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cvListVRStatueRelativeLayout="@{aVChatTypeEnum}">
                        <TextView
                            android:text="点击右侧按钮，进入带看页面"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="带看"
                            android:onClick="@{(view) -> eventImpl.gotoVrOutgoingCall(view, imMessage)}"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="本次带看已结束"
                        app:cvListVRStatueTextView="@{aVChatTypeEnum}"/>
                </LinearLayout>
            </RelativeLayout>
            <include
                layout="@layout/view_msgitem_send_oper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/bubble"
                bind:eventImpl="@{eventImpl}"
                bind:imMessage="@{imMessage}" />
        </RelativeLayout>
    </LinearLayout>
</layout>