<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="adapter"
            type="com.renyu.nimlibrary.ui.adapter.ChatListAdapter">

        </variable>
        <variable
            name="refreshBean"
            type="com.renyu.nimapp.bean.RefreshBean"></variable>
    </data>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_conversationlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f2f8">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_conversationlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_conversationlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:notify="@{refreshBean.refresh}"
                    app:adapter="@{adapter}">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>